@page
@model ServiceHost.Pages.AccountModel
@{
    ViewData["Title"] = "ورود و ثبت نام";
}

<div class="breadcrumb-area section-space--half">
    <div class="container wide">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb-wrapper breadcrumb-bg">
                    <div class="breadcrumb-content">
                        <h2 class="breadcrumb-content__title">ورود و ثبت نام</h2>
                        <ul class="breadcrumb-content__page-map">
                            <li><a asp-page="/Index">صفحه اصلی</a></li>
                            <li class="active">ورود - ثبت نام</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<<div class="page-content-area">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="page-wrapper">
                    <div class="page-content-wrapper">
                        <div class="row">
                            <div class="col-sm-12 col-md-12 col-xs-12 col-lg-6">
                                @if (Model.LoginMessage != null)
                                {
                                    <div class="alert alert-danger">@Model.LoginMessage</div>
                                }
                                <form method="post" asp-page-handler="Login">
                                    <div class="login-form">
                                        <h4 class="login-title">ورود</h4>
                                        <div class="row">
                                            <div class="col-md-12 col-12 form-group">
                                                <label asp-for="LoginCommand.UserName">نام کاربری</label>
                                                <input type="text" asp-for="LoginCommand.UserName" placeholder="نام کاربری">
                                                <span asp-validation-for="LoginCommand.UserName" class="text-danger"></span>
                                            </div>
                                            <div class="col-12 form-group">
                                                <label asp-for="LoginCommand.Password">کلمه عبور</label>
                                                <input type="password" asp-for="LoginCommand.Password" id="passwordField1" placeholder="کلمه عبور">
                                                <span toggle="#passwordField1" class="fa fa-fw fa-eye field-icon toggle-password" style="float: left; margin-left: 15px; margin-top: -45px; position: relative; z-index: 2; cursor: pointer"></span>
                                                <span asp-validation-for="LoginCommand.Password" class="text-danger"></span>
                                            </div>

                                            @*<div class="col-sm-6">
                                            <div class="check-box d-inline-block ml-0 ml-md-2">
                                            <input type="checkbox" id="remember_me">
                                            <label for="remember_me">Remember me</label>
                                            </div>
                                            </div>*@

                                            <div class="col-sm-6 text-left text-sm-right">
                                                <a href="#" class="forget-pass-link">رمز را فراموش کرده اید؟</a>
                                            </div>

                                            <div class="col-md-12">
                                                <button class="register-button">ورود</button>
                                            </div>

                                        </div>
                                    </div>

                                </form>
                            </div>
                            <div class="col-sm-12 col-md-12 col-lg-6 col-xs-12">
                                @if (Model.RegisterMessage != null)
                                {
                                    <div class="alert alert-danger">@Model.RegisterMessage</div>
                                }
                                <form method="post" asp-page-handler="Register">
                                    <div class="login-form">
                                        <h4 class="login-title">ثبت نام</h4>
                                        <div class="row">
                                            <div class="col-md-6 col-12 mb-20 form-group">
                                                <label asp-for="RegisterCommand.Fullname">نام کامل</label>
                                                <input type="text" asp-for="RegisterCommand.Fullname" placeholder="نام کامل">
                                                <span asp-validation-for="RegisterCommand.Fullname" class="text-danger"></span>
                                            </div>
                                            <div class="col-md-6 col-12 mb-20 form-group">
                                                <label asp-for="RegisterCommand.Username">نام کاربری</label>
                                                <input type="text" asp-for="RegisterCommand.Username" placeholder="نام کاربری">
                                                <span asp-validation-for="RegisterCommand.Username" class="text-danger"></span>
                                            </div>
                                            <div class="col-md-12 mb-20 form-group">
                                                <label asp-for="RegisterCommand.Mobile">موبایل</label>
                                                <input type="number" asp-for="RegisterCommand.Mobile" placeholder="موبایل">
                                                <span asp-validation-for="RegisterCommand.Mobile" class="text-danger"></span>
                                            </div>
                                            <div class="col-md-6 mb-20 form-group">
                                                <label asp-for="RegisterCommand.Password">کلمه عبور</label>
                                                <input type="password" asp-for="RegisterCommand.Password" id="passwordField2" placeholder="کلمه عبور">
                                                <span toggle="#passwordField2" class="fa fa-fw fa-eye field-icon toggle-password" style="float: left; margin-left: 15px; margin-top: -45px; position: relative; z-index: 2; cursor: pointer"></span>
                                                <span asp-validation-for="RegisterCommand.Password" class="text-danger"></span>
                                            </div>
                                            <div class="col-md-6 mb-20 form-group">
                                                <label asp-for="RegisterCommand.RePassword">تایید کلمه عبور</label>
                                                <input type="password" asp-for="RegisterCommand.RePassword" id="passwordField3" placeholder="تایید کلمه عبور">
                                                <span toggle="#passwordField3" class="fa fa-fw fa-eye field-icon toggle-password" style="float: left; margin-left: 15px; margin-top: -45px; position: relative; z-index: 2; cursor: pointer"></span>
                                                <span asp-validation-for="RegisterCommand.RePassword" class="text-danger"></span>
                                            </div>
                                            <div class="col-12">
                                                <button class="register-button mt-0">ثبت نام</button>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
    {
    <script>
        $(".toggle-password").click(function() {

            $(this).toggleClass("fa-eye fa-eye-slash");
            var input = $($(this).attr("toggle"));
            if (input.attr("type") == "password") {
                input.attr("type", "text");
            } else {
                input.attr("type", "password");
            }
        });
    </script>
}
